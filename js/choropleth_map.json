{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Tsunami Happened Across The World",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/Szeyuinn/FIT3179Assignment/refs/heads/main/js/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/Szeyuinn/FIT3179Assignment/refs/heads/main/data/cleaned_data.csv",
            "format": {"type": "csv"}
          },
          "key": "state",
          "fields": ["area"]
        }
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "area",
        "type": "quantitative",
        "scale": {"scheme": "greens"},
        "title": "Forest Area (hectares)"
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State"},
        {"field": "area", "type": "quantitative", "title": "Forest Area (hectares)"}
      ]
    }
  }
