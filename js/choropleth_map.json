{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Tsunami Occurrences Across the World",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/Szeyuinn/FIT3179Assignment/refs/heads/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Szeyuinn/FIT3179Assignment/refs/heads/main/data/country_year_occurrences.csv",
          "format": {"type": "csv"}
        },
        "key": "COUNTRY",
        "fields": ["OCCURRENCES"]
      }
    },
    {
      "filter": "datum.YEAR >= yearStart && datum.YEAR <= yearEnd"
    },
    {
      "aggregate": [{
        "op": "sum",
        "field": "OCCURRENCES",
        "as": "total_occurrences"
      }],
      "groupby": ["COUNTRY"]
    }
  ],
  "params": [
    {
      "name": "yearStart",
      "value": 1800,
      "bind": {
        "input": "range",
        "min": 1800,
        "max": 2024,
        "step": 1,
        "name": "Start Year"
      }
    },
    {
      "name": "yearEnd",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1800,
        "max": 2024,
        "step": 1,
        "name": "End Year"
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "total_occurrences",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "title": "Tsunami Occurrences"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "total_occurrences", "type": "quantitative", "title": "Tsunami Occurrences"}
    ]
  }
}
