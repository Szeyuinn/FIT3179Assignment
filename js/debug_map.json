{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Tsunami Occurrences by Year (2000 - 2014)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/blim0028/FIT3179Studio/refs/heads/main/HomeworkWeek8/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Szeyuinn/FIT3179Assignment/refs/heads/main/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME_LONG",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Szeyuinn/FIT3179Assignment/refs/heads/main/data/country_year_occurrences.csv",
              "format": {"type": "csv"}
            },
            "key": "COUNTRY",
            "fields": ["OCCURRENCES", "YEAR"]
          }
        },
        {
          "filter": "datum.YEAR == year"
        },
        {
          "calculate": "datum.OCCURRENCES == 0 ? 0 : datum.OCCURRENCES",
          "as": "total_occurrences"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "total_occurrences",
          "type": "quantitative",
          "scale": {"scheme": "tealblues", "domainMin": 0.1},
          "legend": {
            "title": "Tsunami Occurrences",
            "format": "d"
          }
        },
        "tooltip": [
          {"field": "properties.NAME_LONG", "type": "nominal", "title": "Country"},
          {"field": "total_occurrences", "type": "quantitative", "title": "Tsunami Occurrences"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/blim0028/FIT3179Studio/refs/heads/main/HomeworkWeek8/js/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "darkgray"}
    },
    {
      "data": {
        "values": [{"lat": -35.6751, "lon": -121.543, "note": "In 2014, Chile experienced"},
                  {"lat": -41.6751, "lon": -130.543, "note": "(the highest) 84 tsunami occurrences"},
                  {"lat": -47.6751, "lon": -135.543, "note": "due to an 8.2 magnitude earthquake"},
                  {"lat": -54.6751, "lon": -141.543, "note": "called 'Iquique Earthquake'"}]
      },
      "mark": {
        "type": "text",
        "dy": -10,
        "dx": 10,
        "fontSize": 11,
        "color": "black",
        "fontWeight": "bold"
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "note", "type": "nominal"}
      }
    }
  ],
  "params": [
    {
      "name": "year",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2014,
        "step": 1,
        "name": "Select Year"
      }
    }
  ]
}
