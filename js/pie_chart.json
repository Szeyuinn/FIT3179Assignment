{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Pie chart representing the causes of tsunamis and their respective sizes.",
    "width": 700,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/Szeyuinn/FIT3179Assignment/refs/heads/main/data/causes.csv"
    },
    "mark": "arc",
    "encoding": {
      "theta": {"field": "size", "type": "quantitative", "title": "Size"},
      "color": {
        "field": "text", 
        "type": "nominal", 
        "title": "Cause",
        "scale": {
          "scheme":"tableau20"
        },
        "legend": {
          "labelFontSize": 12,
          "symbolSize": 200,
          "titleFontSize": 14
        }
      },
      "tooltip": [
        {"field": "text", "title": "Cause"},
        {"field": "size", "title": "Size"}
      ]
    },
    
    "view": {"stroke": null}
  }
  