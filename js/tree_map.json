{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/Szeyuinn/FIT3179Assignment/refs/heads/main/data/causes.csv"
    },
    "transform": [
      {
        "flatten": ["text"],
        "as": ["category"]
      },
      {
        "partition": {
          "field": "size",
          "sort": {"field": "size", "order": "descending"},
          "size": [{"signal": "width"}, {"signal": "height"}]
        }
      }
    ],
    "mark": {"type": "rect", "tooltip": true},
    "encoding": {
      "x": {
        "field": "x0",
        "type": "quantitative",
        "axis": null
      },
      "x2": {
        "field": "x1"
      },
      "y": {
        "field": "y0",
        "type": "quantitative",
        "axis": null
      },
      "y2": {
        "field": "y1"
      },
      "color": {
        "field": "category",
        "type": "nominal",
        "legend": null
      },
      "tooltip": [
        {"field": "text", "title": "Cause"},
        {"field": "size", "title": "Occurrences"}
      ]
    },
    "height": 500,
    "width": 500
  }
  